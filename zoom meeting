<script>
function showPrank(e){
  e.preventDefault();
  var box = document.getElementById('prankBox');
  box.style.display = 'block';
  // small animation
  box.style.opacity = 0;
  var op = 0;
  var t = setInterval(function(){
    op += 0.06;
    box.style.opacity = op;
    if(op >= 1) clearInterval(t);
  }, 16);
  // also replace the join button text
  var btn = document.getElementById('joinBtn');
  btn.innerText = "Pranked";
  btn.style.background = "#888";
  btn.style.pointerEvents = "none";
  // optional playful sound using generated beep (works in some browsers)
  try {
    var ctx = new (window.AudioContext || window.webkitAudioContext)();
    var o = ctx.createOscillator();
    o.type = 'sine';
    o.frequency.setValueAtTime(880, ctx.currentTime);
    o.connect(ctx.destination);
    o.start();
    setTimeout(function(){ o.stop(); ctx.close(); }, 220);
  } catch(e){}
}
</script>
